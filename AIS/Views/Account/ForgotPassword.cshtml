@model AIS.Models.ForgotPasswordModel
@{
    Layout = null; 
}
<!DOCTYPE html>
<html>
<head>
    <title>Table Management</title>
    <meta name="viewport" content="width=1024, user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link href='//fonts.googleapis.com/css?family=Lato:400,700,400italic,300italic,900,700italic,900italic'
        rel='stylesheet' type='text/css' />
    <!--[if lt IE 9]>
	<script src="js/html5shiv.js"></script>
	<![endif]-->
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/jqueryval", "~/js/jquery.mCustomScrollbar.concat.min.js")
    <script src="~/js/require.js"></script>
</head>
<body>
    <div class="wrapper login">
        <div class="login-inner1">
            <div class="login-box">
                <a href="javascript:void(0)">
                    <img class="login-logo" src="/images/logo.png" alt=""></a>
                <h2>
                    Forgot Password</h2>
              @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {

                    @*@Html.AntiForgeryToken()*@
                    @Html.ValidationSummary(true)

                    @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.UserName)
                    <div class="row">
                        <p class="p-right">
                            <a href="/Account/Login">Back to Login</a></p>
                        <input type="submit" value="Submit" />
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
