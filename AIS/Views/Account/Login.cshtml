@model AIS.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutMondofiNew.cshtml";
}
<style>

     .validation-summary-errors {
        color: #a94442;
        margin-left: 48px;
        margin-bottom: 20px;
    }

     
     .validation-summary-errors {
        color: #a94442;
        margin-left: 48px;
        margin-bottom: 20px;
    }
</style>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
   
    <div class="container-fluid">
        <div class="container">
            <div class="col-xs-12  col-sm-12 col-md-offset-1 col-md-10 login-section">

                <div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8 col-lg-8 noLeft clearfix">
                    <div class="form-group"><h2>Log in</h2></div>
                    <div class="form-group signGroup clearfix">
                        @Html.ValidationSummary(true)
                        <div class="validation-summary-errors">@Html.ValidationMessageFor(m => m.Email)</div>
                       
                        <div class="col-lg-12">
                            <div class="row">
                                @*<input type="text" name="" id="input" class="form-control" placeholder="YOUR EMAIL" value="" pattern="" title="">*@
                                @Html.TextBoxFor(m => m.Email, new { @id = "input",@class="form-control", @placeholder = "YOUR EMAIL"})

                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="row">
                                @*<input type="password" name="" id="inputpw" class="form-control" placeholder="PASSWORD" value="" pattern="" title="">*@
                                @Html.PasswordFor(m => m.Password, new { @id = "inputpw",@class="form-control", @placeholder = "PASSWORD" })

                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group clearfix">
                        <div class="col-xs-12 col-sm-6 col-md-6 remberPw"><input class="checkbox" type="checkbox" value="true" name="RememberMe"> <label for="rembMe">Remember me</label></div>
                        <div class="col-xs-12 col-sm-6 col-md-6 text-right forgotPw"><a href="/Account/ForgotPassword">Forgot Password?</a></div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-6 col-md-6 text-left"><a class="regNow" href="/Account/register">Register Now!</a></div>
                        <div class="col-xs-12 col-sm-6 col-md-6 text-right"><button type="submit" class="btn btn-orange btnLogin">Log In</button></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

