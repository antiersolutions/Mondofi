@model AIS.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Table Management";
    Layout = null;
}

 <!DOCTYPE html>
<html>
<head>
    <title>Table Management</title>
    <meta name="viewport" content="width=1024, user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link href='//fonts.googleapis.com/css?family=Lato:400,700,400italic,300italic,900,700italic,900italic'
          rel='stylesheet' type='text/css' />
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <![endif]-->
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/jqueryval", "~/js/jquery.mCustomScrollbar.concat.min.js")
    <script src="~/js/require.js"></script>
</head>
<body>
    <div class="wrapper login">
        <div class="login-inner1">
            <div class="login-box">
                <a href="javascript:void(0)">
                    <img class="login-logo" src="/images/logo.png" alt="">
                </a>
                <h2>
                    Reset Password
                </h2>
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                   
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    @Html.HiddenFor(model => model.Email)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" ,@style="margin-left: 0px;" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "margin-left: 0px;" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Reset" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
