@section scripts
{
    <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js" type="text/javascript"></script>
    <script src="../../js/jquery.hoverIntent.js" type="text/javascript"></script>
    <script src="../../js/jquery.cluetip.js" type="text/javascript"></script>
    <script src="../../Scripts/Calendar/Calendar.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setMonthFun();
            setTodayDate();
        });

        function afterLoad() {
            $('td.reser-tool-tip p').click(function () {
                $('.show-tooltip-right').not($(this).parent().find('.show-tooltip-right')).removeClass('show-tooltip-right-toggle');
                $('.show-tooltip-left').removeClass('show-tooltip-left-toggle');
                $(this).parent().find('.show-tooltip-right').toggleClass('show-tooltip-right-toggle');
            });

            $('td.reser-tool-tip-l p').click(function () {
                $('.show-tooltip-right').removeClass('show-tooltip-right-toggle');
                $('.show-tooltip-left').not($(this).parent().find('.show-tooltip-left')).removeClass('show-tooltip-left-toggle');
                $(this).parent().find('.show-tooltip-left').toggleClass('show-tooltip-left-toggle');
            });

            $('.m-left-btn').off('click');
            $('.m-left-btn').click(function () {
                $('.menu-bar').toggleClass('menu-bar-toggle');
                $('.m-left-btn').toggleClass('m-left-btn-toggle');
                $('.middle-section').toggleClass('middle-section-toggle1');
                $('.calendar-sec').toggleClass('calendar-sec-toggle1');
            });
        }

        function getMonthList(month, year) {
            var srh = $("#search").val();
            var ddlMonth = $('#ddlMonth');

            if ((month === undefined || month == null) && ddlMonth.length > 0)
                month = ddlMonth.val().split('/')[0];

            if ((year === undefined || year == null) && ddlMonth.length > 0)
                year = ddlMonth.val().split('/')[1];

            $.ajax({
                data: { month: month, year: year, shiftId: $('#shiftddl :selected').val(), name: $("#search").val() },
                url: '/Calendar/MonthList',
                success: function (data) {
                    $("#weekGrid").html(data);

                    //afterLoad();
                    BindClueTip('a.jt');
                    $("#search").val(srh);

                    $("#search").keypress(function (e) {
                        if (e.keyCode == 13) {
                            getMonthList();
                        }
                    });

                    $("#search").blur(function () {
                        getMonthList();
                    });
                },
                complete: function () {
                    $("#monthText").val($('#ddlMonth :selected').text());
                }
            });
        }

        function setTodayDate() {
            var date = new Date();
            console.log(date.getMonth() + 1 + " " + date.getFullYear());
            getMonthList(date.getMonth() + 1, date.getFullYear());
        }

        function deleteReservation(id) {
            if (confirm("Are you sure you want to delete.")) {
                $.ajax({
                    type: 'POST',
                    data: { ReservationId: id },
                    url: '/Reservation/DeleteReservation',
                    success: function (data) {
                        getMonthList();
                        $("#" + id).remove();
                    }
                });
            }
        }
        function addReservation() {
            window.location.href = "/FloorPlan/FloorPlan/?resDate=" + encodeURIComponent($.datepicker.formatDate('D, M d, yy', new Date()));
        }

        function setMonthFun() {
            $("#next").click(function () {
                var nextElement = $('#ddlMonth > option:selected').next('option');
                if (nextElement.length > 0) {
                    $('#ddlMonth > option:selected').removeAttr('selected').next('option').attr('selected', 'selected').change();
                }
            });

            $("#prev").click(function () {
                var nextElement = $('#ddlMonth > option:selected').prev('option');
                if (nextElement.length > 0) {
                    $('#ddlMonth > option:selected').removeAttr('selected').prev('option').attr('selected', 'selected').change();
                }
            });
        }
    </script>
}
<div class="middle-section calendar-sec">
    <div class="calendar-top-row">
        <input class="today-btn" type="button" value="Today" name="" onclick="window.location.href = '/Calendar/Days'" />
        <div>
            <div class="date-picker">
                <div class="cleft" style="width: 100px;" id="prev">
                </div>
                <input type="text" id="monthText" />
                <div class="cright" style="width: 100px;" id="next">
                </div>
            </div>
        </div>
        <div class="select-t">
            @Html.DropDownList("shiftddl", (SelectList)ViewBag.shiftDdl, "All Shifts", new { onchange = "getMonthList()" })
