@{
    
    Layout = null;
}

<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mondofi!</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,300italic' rel='stylesheet' type='text/css'>
    <style>
			body{
				padding: 0px;
				margin: 0px;
				background: url(../../Content/ComingSoon/images/bg.png);
			}
			.wraper{
				position: absolute;
				width: 100%;
				height: 100%;
				background: url(../../Content/ComingSoon/images/bg-blue.png) repeat-y;
			}
			.content{
				position: absolute;
				width: 550px;
				top: 50%;
				left: 0px;
				right: 0px;
				margin: 0 auto;
				font-family: 'Open Sans', sans-serif;
				font-weight: 300;
				text-align: center;
				margin-top: -80px;
			}
			.content h1{
				font-size: 40px;
				color: #000;
				font-weight: 300;
				margin-bottom: 15px;
				line-height: 35px;
			}
			.content h1 span{
				display: block;
				font-size: 25px;
				color: #777777;
			}
			.content em{
				font-size: 21px;
				font-weight: 300;
			}
			/*media(max-width: 550px){
				.content{
					width: 95%;
				}
			}*/

    </style>


</head>
<body>
    <div class="wraper">
        <div class="content">
            <img src="~/Images/logo.png" />
            <h1>Our site is under construction<span>Please check again soon.</span></h1>
            <em>Thank you</em>
        </div>

    </div>
