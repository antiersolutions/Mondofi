@model  AISModels.Restrictions
@using (Ajax.BeginForm("Create", "Restriction", null, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "refreshContent" }, new { @id = "ModalForm" }))
{
    @Html.ValidationSummary(true)
    <div class="for-edit">
        <h1 id="title">
            Add Restriction</h1>
        <input type="button" name="" value="Cancel" onclick="cancelClick()"id="btnCancel" />
        <input type="submit" value="Save" class="saveBtn svbtn" />
    </div>
    <div class="add-new-main content_1">
        <div class="add-new-inner">
            <div class="add-new-sec-1">
                <label>
                    Restriction</label>
                @Html.TextBoxFor(model => model.Restriction)
                <br />
                @Html.ValidationMessageFor(model => model.Restriction)
                <span id="Rerror" style="color: Red"></span>
            </div>
        </div>
    </div>
}
