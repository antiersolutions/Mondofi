@model IList<AIS.Models.StaffSummaryVM>
@{
    var totalAssignedTables = Model.Sum(s => s.TablesAssigned);
    var totalSeatedTables = Model.Sum(s => s.TablesSeated);
    var totalSeatedCovers = Model.Sum(s => s.CoversSeated);
}
<table>
    <tr>
        <th width="26"></th>
        <th width="122">Name</th>
        <th width="54">
            Tables<br>
            Assigned
        </th>
        <th width="40">
            Tables<br>
            Seated
        </th>
        <th width="43">
            Covers<br>
            Seated
        </th>
    </tr>
</table>
<div id="sumScroll" class="content_1" style="float: left;">
    <table>
        @foreach (var server in Model)
        {
            <tr>
                <td width="18">
                    <span class="staff-color" style="background: @(server.Server.StaffColor)"></span>
                </td>
                <td width="122">
                    @(server.Server.LastName + ", " + server.Server.FirstName)<br>
                    <span>@server.Server.Designation.Desgination</span>
                </td>
                <td width="54">@server.TablesAssigned</td>
                <td width="40">@server.TablesSeated</td>
                <td width="43">@server.CoversSeated</td>
            </tr>
        }
    </table>
</div>
<table>
    <tr class="total">
        <td width="0"></td>
        <td width="144"></td>
        <td width="54">@totalAssignedTables</td>
        <td width="40">@totalSeatedTables</td>
        <td width="43">@totalSeatedCovers</td>
    </tr>
</table>
