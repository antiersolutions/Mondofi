@model AIS.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Table Management</title>
    <meta name="viewport" content="width=1024, user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link href='//fonts.googleapis.com/css?family=Lato:400,700,400italic,300italic,900,700italic,900italic'
        rel='stylesheet' type='text/css' />
    <!--[if lt IE 9]>
	<script src="js/html5shiv.js"></script>
	<![endif]-->
</head>
<body>
    <div class="wrapper login">
        <div class="login-inner1">
            <div class="login-box">
                <a href="javascript:void(0)">
                    <img class="login-logo" src="/images/logo.png" alt=""></a>
                <h2>
                    User Login</h2>
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Username" })
                    @Html.ValidationMessageFor(m => m.UserName)
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @style = "margin-left:0px;" })
                    @Html.ValidationMessageFor(m => m.Password)
                    <div class="row">
                        <input class="checkbox" type="checkbox" value="true" name="RememberMe" />
                        <p>
                            <a href="javascript:void(0)">Remember Password</a></p>
                        <p class="p-right">
                            <a href="/Account/ForgotPassowrd">Forgot Password?</a></p>
                        <input type="submit" value="Login" name="" />
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
