@model AISModels.Cities
@using (Ajax.BeginForm("Create", "City", null, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "refreshContent" }, new { @id = "ModalForm" }))
{ 
    @Html.ValidationSummary(true)
    <div class="for-edit">
        <h1 id="title">
            Add City</h1>
        <input type="button" value="Cancel" onclick="cancelClick()" id="btnCancel" />
        <input type="submit" value="Save" class="saveBtn svbtn" />
    </div>
    <div class="add-new-main content_1">
        <div class="add-new-inner">
            <div class="add-new-sec-1">
                <label>
                    City</label>
                @Html.TextBoxFor(model => model.City)
                <br />
                @Html.ValidationMessageFor(model => model.City)
                <span id="aerror" style="color: Red"></span>
            </div>
        </div>
    </div>
}
