@model AIS.Models.LoginViewModel
@using (Ajax.BeginForm("Login",
                        "Account",
                        new
                        {
                            returnUrl = ViewBag.ReturnUrl
                        },
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            UpdateTargetId = "loginMondofi",
                            OnSuccess = "loginComplete(data)"

                        },
                        new
                        {
                            @id = "loginFormAjax"
                        }))
{
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 center-block noLeft clearfix">
        <div class="form-group"><h2>Log in</h2></div>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false);
        <div class="form-group signGroup clearfix">
            <div class="col-lg-12">
                <div class="row">
                    @Html.TextBoxFor(m => m.Email, new { @id = "input", @class = "form-control", @placeholder = "YOUR EMAIL" })
                    @*<input type="text" name="" id="input" class="form-control" placeholder="YOUR EMAIL" value="" pattern="" title="">*@
                </div>
            </div>
            <div class="col-lg-12">
                <div class="row">
                    @Html.PasswordFor(m => m.Password, new { @id = "inputpw", @class = "form-control", @placeholder = "PASSWORD" })
                    @*<input type="password" name="" id="inputpw" class="form-control" placeholder="PASSWORD" value="" pattern="" title="">*@
                </div>
            </div>
        </div>
        <div class="form-group clearfix">
            <div class="col-xs-12 col-sm-6 col-md-6 remberPw"><input id="rembMe" type="checkbox" value="true"> <label for="rembMe">Remember me</label></div>
            <div class="col-xs-12 col-sm-6 col-md-6 text-right forgotPw"><a href="#">Forgot Password ?</a></div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 text-right"><button type="submit" class="btn btn-orange btnLogin">Log In</button></div>
        </div>
    </div>

}

<script>
    function loginComplete(data) {
        if (data == "Success") {
            var url = window.location.href;
           // var path = "http://localhost:54056/FloorPlan/FloorPlan";
             var path = "http://www.mondofi.com/FloorPlan/FloorPlan";
            window.location.href = path;
        }

    }

</script>